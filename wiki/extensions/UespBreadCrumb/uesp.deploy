name = uesp.wikibreadcrumb
description = MediaWiki extension used on UESP.net
repository = https://github.com/uesp/uesp-wikibreadcrumb
backup = true
verbosity = 0

	# Staging is important as the APC cache randomly breaks if you try to update the files in place.
staged = true

ignore = *.deploy
ignore = .git*

dest = content1.uesp.net:/home/sfwiki/www/w/extensions/UespBreadCrumb/
dest = content2.uesp.net:/home/sfwiki/www/w/extensions/UespBreadCrumb/
dest = content3.uesp.net:/home/sfwiki/www/w/extensions/UespBreadCrumb/

destname = [backup]backup1.uesp.net:/home/sfwiki/www/w/extensions/UespBreadCrumb/
destname = [dev]content3.uesp.net:/home/sfwiki/dev/www/w/extensions/UespBreadCrumb/

